spring:
  application:
    name: retail-engine

  datasource:
    url: jdbc:postgresql://localhost:5432/RetailDB # whatever your url is "jdbc:postgresql://host:port/DBname"
    username: #postgres username here
    password: # postgres user password here


  jpa:
    hibernate:
      ddl-auto: create # creates tables everytime on application startup (dev)
    properties:
      hibernate:
        format-sql: true
    show-sql: true
    defer-datasource-initialization: true  # for inserting sample data in table on startup



  sql:
    init:
      mode: always
      data-locations: classpath:sample-data.sql

jwt:
  SecretKey:  # any secret key

server:
  servlet:
    context-path: /api

logging:
  level:
    org.springframework.jdbc.datasource.init: DEBUG